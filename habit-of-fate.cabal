name:                habit-of-fate
version:             0.1.0.0
synopsis:            A game to strengthen habits
license:             BSD3
license-file:        LICENSE
author:              Gregory Crosswhite
maintainer:          gcrosswhite@gmail.com
copyright:           2016 Gregory Crosswhite
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      sources/library
  build-depends:       base
                     , aeson
                     , ansi-terminal
                     , containers
                     , MonadRandom
                     , lens
                     , mtl
                     , random
                     , string-qq
                     , transformers
  exposed-modules:     HabitOfFate
                     , HabitOfFate.Console
                     , HabitOfFate.MonadGame
                     , HabitOfFate.Quest
                     , HabitOfFate.Quests
                     , HabitOfFate.Quests.Forest
                     , HabitOfFate.Substitution
                     , HabitOfFate.TH
                     , HabitOfFate.Unicode
  default-language:    Haskell2010

executable good
  hs-source-dirs:      sources/executables
  main-is:             good.hs
  build-depends:       habit-of-fate
                     , base
                     , yaml
  default-language:    Haskell2010

executable new
  hs-source-dirs:      sources/executables
  main-is:             new.hs
  build-depends:       habit-of-fate
                     , base
                     , yaml
  default-language:    Haskell2010